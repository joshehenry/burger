<h1>Burgers 101</h1>



<div class ="container">
    <div class="row">
        <div class ="col s6">
            {{#each burgers}}
            {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>
        </div>
    </div>
</div>
   <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='devoured'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>

  <h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="New Burger">
      <button type="submit" class="BurgerButton">Add Burger</button>
    </form>
  </div>
</div>